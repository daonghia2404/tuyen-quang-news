              if (item.icon === 'arrow')
                <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M11.625 3.75H8.25L12 9L8.25 14.25H11.625L15.375 9L11.625 3.75Z" fill="#6F7789"/><path d="M6.375 3.75H3L6.75 9L3 14.25H6.375L10.125 9L6.375 3.75Z" fill="#6F7789"/></svg>

              if (item.icon === 'link')
                <svg width="23" height="23" viewBox="0 0 23 23" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M6.69875 10.5417L2.875 14.375L6.69875 18.2083V15.3333H13.4167V13.4167H6.69875V10.5417ZM20.125 8.625L16.3012 4.79166V7.66666H9.58333V9.58333H16.3012V12.4583L20.125 8.625Z" fill="#6F7789"/></svg>

